<p id="notice"><%= notice %></p>

<h1>Listando as Medidas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Valor</th>
      <th>Data de Coleta</th>
      <th>Escala de Medição</th>
      <th>Unidade de Medida</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measures.each do |measure| %>
      <tr>
        <td><%= measure.name %></td>
        <td><%= measure.value %></td>
        <td><%= measure.collection_date %></td>
        <td><%= measure.scale %></td>
        <td><%= measure.unit_of_measurement.name%></td>
        <td><%= link_to 'Show', measure %></td>
        <td><%= link_to 'Edit', edit_measure_path(measure) %></td>
        <td><%= link_to 'Destroy', measure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Medida', new_measure_path %>