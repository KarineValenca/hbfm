<p id="notice"><%= notice %></p>

<h1>Listing Unit Of Measurements</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unit_of_measurements.each do |unit_of_measurement| %>
      <tr>
        <td><%= unit_of_measurement.name %></td>
        <td><%= unit_of_measurement.initials %></td>
        <td><%= link_to 'Show', unit_of_measurement, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_unit_of_measurement_path(unit_of_measurement), class: 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', unit_of_measurement, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Unit of measurement', new_unit_of_measurement_path, class: 'btn btn-success' %>