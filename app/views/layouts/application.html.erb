<!DOCTYPE html>
<html>
  <head>
    <title>Hbfm</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-dark navbar-expand-lg bg-primary">
  <a class="navbar-brand" href="/">HBFM</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="#">Sobre</a>
      </li>
       <li class="nav-item">
       <%= link_to 'Ajuda', '/help/', :class =>"nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Coleta de Métricas
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <%= link_to 'Métricas', metrics_path, :class => "dropdown-item" %>
          <%= link_to 'Unidades de Medida', unit_of_measurements_path, :class => "dropdown-item" %>
        </div>
      </li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
          <%= link_to 'Cadastro', new_user_registration_path, :class =>"nav-link" %>
        </li>
        <% if current_user.blank? %>
        <li class="nav-item">
          <%= link_to 'Login', new_user_session_path, :class => "nav-link" %>
        </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Logout', destroy_user_session_path, :method => :delete, :class => "nav-link" %>
          </li>
        <% end %>
  </div>
</nav>
    <% if notice %>
      <p class="alert alert-warning"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    
    <%= yield %>
  </body>
</html>
