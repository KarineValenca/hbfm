<h3> <%= @final_measure.value %> </h3>

<div class="row">
    <div class="col">
      <%- @measures.each do |measure| %>
      <h3> Editar Medida </h3>
      <%= form_for measure, remote: true do |f| %>
		<div class="field">
      		<%= f.label 'Nome:' %><br>
      		<%= f.text_field :name, value: measure.name %>
    	</div>

    	<div class="field">
      		<%= f.label 'Valor' %><br>
      		<%= f.number_field :value, value: measure.value %>
    	</div>
    	<%= f.hidden_field :final_measure_id, :value => @final_measure.id %>
    	<div class="actions">
        <%= f.submit 'Salvar', class: 'btn btn-success', remote: true, id: 'submit'%>
      </div>
	  <% end %>
	  <br>

	<% end %>
    </div>
    <div class="col">
      <div id='div-final-meaures'>
        <h3> Combine as Medidas </h3>
        <ul id='ul-measures' data-update-url="<%= sort_measures_url %>"">
        </ul>
      </div>
      <div id='final'>
        <h3>Resultado Final</h3>        
      </div>
    </div>
  </div>
<%= link_to "Finalizar", metrics_path, class: 'btn btn-primary' %>