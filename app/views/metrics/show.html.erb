<p id="notice"><%= notice %></p>
<div>
<h1> <%= @metric.name %> </h1>
<p> Unidade de Medida:<%= @metric.unit_of_measurement.name %></p>
<p> Escala de Medição: <%= @metric.scale %> </p>
</div>

<div>
<h3> Valor das medidas </h3>

<%- @final_measures.each do |final_measure| %>
	<div> 
		<b>Valor:</b> <span> <%= final_measure.value %> </span> 
		<b>Data de coleta:</b> <span> <%= final_measure.created_at.to_date.strftime("%d-%m-%Y") %></span>
		<%= link_to 'Editar', edit_final_measure_path(final_measure), class: 'btn btn-warning' %>
	</div> 
<% end %>
</div>
<div>
  <%= link_to 'Editar', edit_metric_path(@metric), class: 'btn btn-warning' %>
  <%= link_to 'Voltar', metrics_path, class: 'btn btn-primary' %>
</div>